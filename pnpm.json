{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchPackagePatterns": ["pnpm"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeSchedule": [
        "after 5am every weekday",
        "before 8pm every weekday"
      ]
    }
  ]
}
